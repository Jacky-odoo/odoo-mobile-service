<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="brand_select_wizard" name="Select Brand Wizard Page">
        <t t-call="website.layout">
            <div id="wrap" class="js_blog website_blog">
                <t t-out="0" />

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active">برند گوشی</li>
                        <li class="breadcrumb-item">مدل گوشی</li>
                        <li class="breadcrumb-item">دسته ایراد</li>
                        <li class="breadcrumb-item">ایراد</li>
                    </ol>
                </nav>


                <section style="direction: rtl; place-content: stretch; align-items: stretch;" >
                    <p style="text-align: text-center;">
                        <h1 name="Header-1" class="section-head xs-mb-30 title-highlight-left"
                            style="padding: 8px; background-color: rgb(255, 255, 255); text-align: center;">
                            تعمیر گوشی خود را با انتخاب برند آن آغاز نمایید
                        </h1>
                    </p>
                </section>

                <section
                    id="category-list"
                    style="direction: rtl; margin: 0px; padding: 0px; display: flex; flex-flow: row wrap; place-content: stretch space-around; align-items: stretch;">
                    <t t-foreach="brands" t-as="brand">
                        <div id="list-item"
                            class="text-underline-hover">
                            <a id="link"
                                t-att-href="'/mobile-service/' + brand.internal_ref">
                            <img id="logo"
                                t-if="brand.image"
                                t-att-src="image_data_uri(brand.image)"
                                t-att-alt="'تعمیر گوشی و موبایل ' + brand.name + ' - البان'"/>
                            
                                <t t-out="brand.name" />
                            </a>
                        </div>
                    </t>
                </section>

                <!-- Droppable-area shared across all blog's pages -->
                <t t-set="oe_structure_blog_footer_description">Visible in all pages</t>
                <div class="oe_structure oe_empty oe_structure_not_nearest"
                    id="oe_structure_blog_footer"
                    t-att-data-editor-sub-message="oe_structure_blog_footer_description" />
            </div>
        </t>
    </template>
</odoo>