<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="widget_complaint_description_wizard" name="Select complaint description Wizard Page">
        <section style="direction: rtl">
            <h1 name="Header-1" class="section-head xs-mb-30 title-highlight-left"
                style="padding: 8px; text-align: center; background-color: rgb(255, 255, 255);">
                توصیف ایراد گوشی خود را انتخاب کنید
            </h1>
        </section>

        <section
            id="category-list"
            class="d-flex flex-wrap flex-column flex-md-row justify-content-center align-item-stretch m-0 p-0">
            <t t-foreach="complaint_descriptions" t-as="complaint_description">
                <a id="list-item"
                    class="d-flex flex-row flex-md-column justify-content-end flex-align-center m-2 border border-primary border-2 rounded-3 text-decoration-none"
                    t-att-href="'/mobile-service/' + brand.internal_ref + '/' + model.internal_ref + '/' + complaint.internal_ref + '/' + complaint_description.internal_ref">
                    <img id="logo"
                        class="d-none d-md-block m-0"
                        style="object-fit: contain;
                    max-height: 200px;
                    max-width: 200px;
                    border-bottom: 1px solid rgba(0, 0, 0, 0.12);"
                        t-if="complaint_description.image"
                        t-att-src="image_data_uri(complaint_description.image)"
                        t-att-alt="'تعمیر گوشی و موبایل ' + complaint_description.name + ' - البان'" />
                    <img id="logo"
                        class="d-md-none m-0"
                        style="object-fit: contain;
                    max-height: 64px;
                    max-width: 64px;
                    border-bottom: 1px solid rgba(0, 0, 0, 0.12);"
                        t-if="complaint_description.image"
                        t-att-src="image_data_uri(complaint_description.image)"
                        t-att-alt="'تعمیر گوشی و موبایل ' + complaint_description.name + ' - البان'" />
                    <div name="div" id="title" class="border-start"></div>
                    <spam t-out="complaint_description.name"
                        class="flex-fill align-self-center p-2 " />
                </a>
            </t>
        </section>
    </template>
</odoo>