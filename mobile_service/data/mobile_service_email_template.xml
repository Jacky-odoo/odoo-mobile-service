<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_mobile_service" model="mail.template">
            <field name="name">Service Status Email</field>
            <field name="model_id" ref="model_mobile_service_service" />
            <field name="email_from">${(object.user_id.email |safe}</field>
            <field name="email_to">${object.person_id.email |safe}</field>
            <field name="subject">Ref ${object.name or 'n/a' }</field>
            <field name="auto_delete" eval="True" />
            <field name="lang">${object.person_id.lang}</field>
            <field name="body_html"><![CDATA[
                <p>Dear ${object.person_id.name},</p>
                <p>Your service request for ${object.brand_id.name or 'n/a' } (${object.model_id.brand_id or 'n/a' }) with reference no <b>${object.name or 'n/a' }</b> has been processed to <b>${object.service_state or 'n/a' }</b> stage.</p>
                <p>If you have any questions, please let us know.</p>
                <p>Best regards,</p>]]>
            </field>
        </record>
    </data>
</odoo>