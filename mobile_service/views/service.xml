<odoo>
    <record id="mobile_service_sequence" model="ir.sequence">
        <field name="name">Service Code</field>
        <field name="code">mobile_service.service.sequence</field>
        <field name="prefix">SERV/</field>
        <field eval="4" name="padding" />
        <field name="company_id" eval="False" />
    </record>

    <record id="mobile_service_request_search_view" model="ir.ui.view">
        <field name="name">service.request.search1</field>
        <field name="model">mobile_service.service</field>
        <field name="arch" type="xml">
            <search string="Search in requests">
                <field name="person_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer'}" />
                <field name="contact_no" />
                <field name="technician_id" />
                <field name="imei_no" />
                <field name="return_date" />
                <field name="service_state" />
                <field name="company_id" groups="base.group_multi_company" />

                <filter string="Draft" name="Service Status" domain="[('service_state', '=', 'draft')]" />
                <separator />
                <group expand="0" string="Group By">
                    <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" />
                    <filter string="Service State" name="service_state" domain="[]" context="{'group_by': 'service_state'}" groups="base.group_multi_company" />
                    <filter string="Technician" name="technician" domain="[]" context="{'group_by': 'technician_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="mobile_service_request_form_view" model="ir.ui.view">
        <field name="name">mobile_service.service.request.form</field>
        <field name="model">mobile_service.service</field>
        <field name="arch" type="xml">
            <form string="Mobile Shop" >
                <!-- Hidden fields -->
                <field name="picking_count" invisible="1" />
                <header> 
                    <!-- all state button is in there -->
                    <div  class="btn-group flex-shrink-1 mh-300" role="group" aria-label="Button group example">
                        <!--**** State Accepted(draft) *********************************************-->
                        <button 
                            type="object" 
                            class="btn btn-info btn-sm"
                            string=" Check IMEI"
                            name="action_chk_service" 
                            attrs="{'invisible': [('service_state','not in',('draft'))]}" />
                        <button  
                            type="object" 
                            class="btn btn-primary btn-sm"
                            string=" Cancel Warranty"
                            name="action_view_warranty"  
                            attrs="{'invisible': ['|',('model_id','=',False),('service_state','not in',('draft'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_acceptor" />
                        <button  
                            type="object" 
                            class="btn btn-info btn-sm"
                            string=" Assessment"
                            name="action_easmobile_service" 
                            attrs="{'invisible': ['|',('model_id','=',False),('service_state','not in',('draft'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_acceptor" />
                        
                        <!-- **** State Customer action and notification(caan)  ****************************************** -->
                         
                        <button  
                            type="object" 
                            class="btn btn-primary btn-sm"
                            string=" Confirmation" 
                            name="action_easmobile_service"  
                            attrs="{'invisible': [('service_state','not in',('caan'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_acceptor" />
                        <button  
                            type="object" 
                            class="btn btn-info btn-sm"
                            string=" Rejection"
                            name="action_qcsmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('caan'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_acceptor" />
                        <button  
                            type="object" 
                            class="btn btn-primary btn-sm"
                            string=" Failure to receive service"
                            name="action_qcsmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('caan'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_acceptor" />
                        <button  
                            type="object" 
                            class="btn btn-info btn-sm"
                            string=" Receive service"
                            name="action_draftmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('caan'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_acceptor" />
                        <!-- **** State Evaluation and service(easmobile) ****************************************** -->
                         
                        <button  
                            type="object" 
                            class="btn btn-primary btn-sm"
                            string=" Repairable" 
                            name="action_acceptmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('easmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_executer" />
                        <button  
                            type="object" 
                            class="btn btn-info btn-sm"
                            string=" Unrepairable" 
                            name="action_qcsmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('easmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_executer" />
                        <button  
                            type="object" 
                            class="btn btn-primary btn-sm"
                            string=" Coordination with the customer" 
                            name="action_acceptmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('easmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_executer" />
                        <button  
                            type="object" 
                            class="btn btn-info btn-sm"
                            string=" No warranty" 
                            name="action_draftmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('easmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_executer" />
                        <button  
                            type="object" 
                            class="btn btn-primary btn-sm"
                            string=" Exchange/return" 
                            name="action_acceptmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('easmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_executer" />
                        <button  
                            type="object" 
                            class="btn btn-info btn-sm"
                            string=" Termination of services" 
                            name="action_qcsmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('easmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_executer" />
                        <button  
                            type="object" 
                            class="btn btn-primary btn-sm"
                            string=" Create Invoice" 
                            name="action_invoice_create_wizard" 
                            attrs="{'invisible': [('service_state','not in',('easmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager,mobile_service.mobile_service_group_executer" />
                        <!-- **** State Quality Control and shipping(qcsmobile) ****************************************** -->
                         
                        <button  
                            type="object" 
                            class="btn btn-info btn-sm"
                            string=" Confirm repair" 
                            name="action_finmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('qcsmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager" />
                        <button  
                            type="object" 
                            class="btn btn-primary btn-sm"
                            string=" Confirmation of replacement" 
                            name="action_finmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('qcsmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager" />
                        <button  
                            type="object" 
                            class="btn btn-info btn-sm"
                            string=" Disapproval" 
                            name="action_easmobile_service" 
                            attrs="{'invisible': [('service_state','not in',('qcsmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager" /> 
                        <!-- *********************** State delivered(finmobile) ****************************************** -->
                        <button  
                            type="object" 
                            class="btn btn-primary btn-sm fa fa-paper-plane"
                            string=" Send Mail To Customer" 
                            name="action_send_mail" 
                            attrs="{'invisible': [('service_state','not in',('finmobile'))]}" 
                            groups="mobile_service.mobile_service_group_manager" />  
                        <button  
                            type="object" 
                            class="btn btn-info btn-sm fa fa-handshake-o"
                            string=" Send information to CRM" 
                            name="register_to_crm" 
                            attrs="{'invisible': [('service_state','not in',('finmobile'))]}"
                            groups="mobile_service.mobile_service_group_manager" />  
                        <!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
                    </div>
                
                        <field 
                            name="service_state" 
                            widget="statusbar"
                            statusbar_visible="draft,caan,esamobile,qcsmobile,finmobile" />
                
                </header>
                <!-- There is messages that for warranty -->                
                <div class="alert alert-warning m-0 p-0 w-100 fa fa-2x fa-exclamation-triangle" 
                    role="alert"
                    attrs="{'invisible': [('warranty_id', '!=', False)]}">
                    No warranty found for this IMEI
                </div>
                <div class="alert alert-warning m-0 p-0 w-100 fa fa-2x fa-exclamation-triangle" 
                    role="alert"
                    attrs="{'invisible': ['|', ('warranty_id', '=', False), ('is_in_warranty', '=', True)]}">
                    Current warranty for this IMEI is expired
                </div>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name='action_view_invoice' class="oe_stat_button" type="object" icon="fa-money" attrs="{'invisible': [('service_state','in',('draft'))]}">
                            <field string="Invoice" name="invoice_count" widget="statinfo" />
                        </button>
                        <button name='action_view_services' class="oe_stat_button" type="object" icon="fa-cog" attrs="{'invisible': [('imei_no','=', False)]}">
                            <field string="Services" name="service_count" widget="statinfo" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <field name="re_repair" 
                            widget="bs_toggle" 
                            attrs="{'readonly': [('service_state','in',('finmobile'))]}" />
                    </group>

                    <group>
                        <group id="contact-info">
                            <field name="person_id" 
                                widget="res_partner_many2one" 
                                context="{'res_partner_search_mode': 'customer'}" 
                                attrs="{'readonly': [('service_state','not in',('draft'))]}" />
                            <field name="contact_no" />
                            <field name="email_id" />
                            <field name="street" />
                            <field name="city" />
                            <field 
                                name="state_id" 
                                options='{"no_open": True}' />
                            <field 
                                name="national_code" 
                                pattern="[0-9۰-۹]{10}"
                                placeholder="Enter 10 Number That is your national Code" />
                            <field 
                                name="country_id" 
                                options='{"no_open": True, "no_create": True}' />
                        </group>
                        <group id="request-info">
                            <field 
                                name="model_id" 
                                placeholder="Model Name" 
                                attrs="{'readonly': ['|',('service_state','not in',('draft')),('warranty_id', '!=', True)]}" />
                            <field 
                                name="brand_id" />
                            <field 
                                name="date_request" />
                            <field 
                                name="accept_date" 
                                attrs="{'invisible': [('service_state','in',('draft'))]}" />
                            <field 
                                name="return_date" 
                                attrs="{'invisible': ['!', ('service_state','in',('returned','not_solved'))]}" />

                            <field 
                                name="acceptor_id" 
                                attrs="{'readonly': [('service_state','not in',('draft'))]
                                                            ,'invisible' : [('service_state','in',('draft'))]}" />


                            <field 
                                name="technician_id" 
                                attrs="{'readonly': [('service_state','not in',('draft', 'caan'))]}" />
                            <field 
                                name="company_id" 
                                groups="base.group_multi_company" 
                                attrs="{'readonly': [('service_state','not in',('draft'))]}" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Warranty">
                            <group>
                                <field 
                                    name="imei_no" 
                                    style="width:50%;" 
                                    colspan="1" 
                                    attrs="{'readonly': [('service_state','not in',('draft'))]}" />
                                <field 
                                    name="is_in_warranty" 
                                    widget="bs_toggle">
                                </field>
                                <field 
                                    name="warranty_id" 
                                    options='{"no_open": True, "no_create": True}'
                                    readonly="1"
                                    force_save="1" />
                            </group>
                        </page>
                        <page string="Description">
                            <group>
                                <field name="internal_notes" placeholder="Notes used internally (eg: device password)" attrs="{'readonly': [('service_state','in',('finmobile'))]}" />
                            </group>
                        </page>
                        <page string="Complaints">
                            <field name="complaint_tree_ids" mode="tree" attrs="{'readonly': [('service_state','in',('finmobile'))]}">
                                <tree string="Complaints" editable="bottom">
                                    <field name="complaint_id" />
                                    <field name="complaint_description_id" />
                                </tree>
                                <form>
                                    <field name="complaint_id" />
                                    <field name="complaint_description_id" />
                                </form>
                            </field>
                        </page>
                        <page string="Parts Usage">
                            <field name="product_order_line_ids" mode="tree" attrs="{'readonly': [('service_state','in',('finmobile'))]}">
                                <tree string="Complaints" editable="bottom">
                                    <field name="product_id" />
                                    <field name="product_uom_qty" />
                                    <field name="product_uom" />
                                    <field name="price_unit" />
                                    <field name="qty_stock_move" />
                                    <field name="qty_invoiced" />
                                    <field name="part_price" />
                                </tree>
                                <form>
                                    <field name="product_id" />
                                    <field name="product_uom_qty" />
                                </form>
                            </field>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="service_request_view_kanban" model="ir.ui.view">
        <field name="name">mobile_service.service.kanban</field>
        <field name="model">mobile_service.service</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="image" />
                <field name="id" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('mobile_service.service', 'image_medium', record.id.raw_value)" />
                            </div>
                            <div class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="name" />
                                    </strong>
                                </div>
                                <div class="text-muted o_kanban_record_subtitle">
                                    <field name="person_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer'}" />
                                    <br />
                                    <field name="service_state" />
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="mobile_service_graph" model="ir.ui.view">
        <field name="name">mobile_service.service.graph</field>
        <field name="model">mobile_service.service</field>
        <field name="arch" type="xml">
            <graph string="Service Graph">
                <field name="technician_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="mobile_service_request_tree_view" model="ir.ui.view">
        <field name="name">mobile_service.service.request.tree</field>
        <field name="model">mobile_service.service</field>
        <field name="arch" type="xml">
            <tree decoration-muted="service_state=='finmobile'" default_order="name desc">
                <field name="name" />
                <field name="person_id" />
                <field name="contact_no" optional="hide" />
                <field name="brand_id" optional="hide" />
                <field name="model_id" />
                <field name="imei_no" />
                <field name="technician_id" optional="show" />
                <field name="return_date" optional="hide" />
                <field name="date_request" optional="hide" />
                <field name="accept_date" optional="hide" />
                <field name="complaint_tree_ids" widget="many2many_tags" />

                <!-- state is used -->
                <field name="service_state" widget="badge" decoration-info="service_state == 'draft'" decoration-success="service_state == 'finmobile'" />
                <field name="company_id" optional="show" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record id="action_mobile_service_request" model="ir.actions.act_window">
        <field name="name">Service Request</field>
        <field name="res_model">mobile_service.service</field>
        <field name="view_mode">tree,form,kanban,pivot,graph</field>
        <field name="search_view_id" ref="mobile_service_request_search_view" />
        <field name="view_id" ref="mobile_service_request_tree_view" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Record.
            </p>
        </field>
    </record>


    <menuitem 
        id="mobile_service_menu" 
        parent="mobile_service_main_menu" 
        sequence="20" />

    <menuitem 
        action="action_mobile_service_request" 
        id="mobile_service_menu2" 
        parent="mobile_service_main_menu" 
        name="Service Request" 
        sequence="1" />
</odoo>