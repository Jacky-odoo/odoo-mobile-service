<odoo>
    <data>

        <record id="mobile_service_warranty_search_view" model="ir.ui.view">
            <field name="name">mobile.warranty.search1</field>
            <field name="model">mobile.warranty</field>
            <field name="arch" type="xml">
                <search string="Search in warranties">
                    <field name="importer_id"
                        widget="res_partner_many2one"/>
                    <field name="warranty_id"
                        widget="res_partner_many2one"/>
                    <field name="imei1" />
                    <field name="imei2" />
                    <field name="brand_id" />
                    <field name="model_id" />
                    <field name="color" />
                    <field name="state" />
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="start_date" />
                    <field name="expire_date" />

                    <filter string="Draft"
                        name="Status"
                        domain="[('state', '=', 'draft')]" />
                    <filter string="Valid"
                        name="Status"
                        domain="[('state', '=', 'valid')]" />
                    <filter string="Expired"
                        name="Status"
                        domain="[('state', '=', 'expired')]" />

                    <separator />
                    <group expand="0" string="Group By">
                        <filter string="Status"
                            name="state"
                            domain="[]"
                            context="{'group_by': 'state'}" />
                        <filter string="Brand"
                            name="brand_id"
                            domain="[]"
                            context="{'group_by': 'brand_id'}" />
                        <filter string="Model"
                            name="model"
                            domain="[]"
                            context="{'group_by': 'model_id'}" />
                        <filter string="Part Number"
                            name="part_number"
                            domain="[]"
                            context="{'group_by': 'part_number'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="mobile_service_warranty_form_view" model="ir.ui.view">
            <field name="name">mobile.service.warranty.form</field>
            <field name="model">mobile.warranty</field>
            <field name="arch" type="xml">
                <form string="Mobile Warranty">
                    <header>
                        <field name="state" 
                            widget="statusbar"
                            statusbar_visible="draft,valid,expired" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group id="brand">
                                <field name="brand_id" />
                                <field name="model_id" />
                                <field name="color" />
                            </group>
                            <group id="imei">
                                <field name="imei1" />
                                <field name="imei2" />
                            </group>
                            <group id="import-info">
                                <field name="code_hamta" />
                                <field name="part_number" />
                            </group>
                            <group id="partners">
                                <field name="importer_id" />
                                <field name="warranty_id" />
                                <field name="company_id" groups="base.group_multi_company"/>
                                <separator/>
                                <field name="start_date" />
                                <field name="expire_date" />
                            </group>
                        </group>
                        <notebook>
                            <page id="note" string="Description">
                                <group>
                                    <field name="descriptions" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

